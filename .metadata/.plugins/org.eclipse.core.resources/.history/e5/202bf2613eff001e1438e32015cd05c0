package springcore.javaconfig;

import org.springframework.context.support.ClassPathXmlApplicationContext;

public class Test {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ClassPathXmlApplicationContext context=new ClassPathXmlApplicationContext("springcore/javaconfig/config.xml");
		Student student=context.getBean("firststudent",Student.class);
		System.out.println(student);
		
		
//		to close the context
		context.close();
	}

}
